#include <stdio.h>

int main() {
    double t1, t2, t3;
    
    // Введення значень
    printf("Введіть три значення: ");
    scanf("%lf %lf %lf", &t1, &t2, &t3);
    
    // Обчислення часу
    double totalTime = 1.0 / (1.0 / t1 + 1.0 / t2 + 1.0 / t3);
    
    // Виведення результату, округленого до 2 знаків після коми
    printf("Час, необхідний для з'їдання пирога: %.2f годин\n", totalTime);
    
    return 0;
}

